.deep.position-absolute.w-100.h-100(id="deep")
.send_form.pt-5.position-absolute.d-flex.justify-content-center.align-items-start(id="from_search")
    form.d-flex.justify-content-start(action="" method="get")
        input(class="px-2 border-start border-white border-bottom border-top border-2 py-1 outline-0 rounded-start" type="search" placeholder="dkldkldkdlkldkdldl")
        button(id="send" class="btn rounded-0 text-white" type="submit") <i class="fas fa-search"></i>
section.py-5.catBooks
    .content-cat 
        .container-fluid
            div.py-5.head.d-flex.justify-content-between.align-items-center 
                h1.text-capitalize= nameHead
                a.rounded.py-2.px-3.d-block.text-white.text-capitalize.text-decoration-none(href="/" rel="noopener noreferrer") <i class="fas fa-times"></i>
            div#back-end-row.row.p-3
                each item , index in books.id
                    article(class=" pack  my-4 col-12 col-sm-6 col-md-3 col-lg-3 col-xl-3 ")
                        div(class="py-3 px-2 w-100 h-100 d-flex flex-column")
                            div
                                a(class="w-100" rel="noopener noreferrer" href="/book/"+item)
                                    img(class="w-100 rounded" src="/images/" + books.image[index] alt="image book")
                            div(class="flex-grow-1 py-2")
                                h6= books.title[index]
                            div
                                a(class="flex-grow-0 text-decoration-none" rel="noopener noreferrer" href="/book/"+item) Show details        











